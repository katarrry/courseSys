<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.laboras.UserInfoWindow">
   <children>
      <TextField fx:id="name" layoutX="57.0" layoutY="105.0" promptText="Name" />
      <TextField fx:id="surname" layoutX="286.0" layoutY="105.0" promptText="Surname" />
      <TextField fx:id="email" layoutX="57.0" layoutY="164.0" promptText="Email" />
      <TextField fx:id="title" layoutX="286.0" layoutY="164.0" promptText="Title" />
      <TextField fx:id="login" layoutX="57.0" layoutY="222.0" promptText="Login" />
      <TextField fx:id="psw" layoutX="286.0" layoutY="222.0" promptText="Password" />
      <Label fx:id="id" layoutX="57.0" layoutY="45.0" text="User ID" />
      <Button fx:id="save" layoutX="453.0" layoutY="316.0" mnemonicParsing="false" onAction="#updateUser" text="Save" />
      <Button fx:id="delete" layoutX="322.0" layoutY="316.0" mnemonicParsing="false" onAction="#deleteUser" text="Delete account" />
      <Button fx:id="back" layoutX="57.0" layoutY="316.0" mnemonicParsing="false" onAction="#returnToCourse" text="Back" />
   </children>
</AnchorPane>
